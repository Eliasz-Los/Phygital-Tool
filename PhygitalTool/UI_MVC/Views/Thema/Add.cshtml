@using Phygital.UI_MVC.Models.Dto;
@model SubThemasDto

@{
    ViewBag.Title = "Add Thema";
    Layout = "_Layout";
}

<div class="text-center">
    <h3 class="align-content-center p-4">Maak nieuw thema</h3>
    <div class="container-fluid">
        <form class="">
            <div class="d-flex justify-content-center">
                <div class="col-lg-6 text-start">
                    <label for="ThemaInput">Thema</label>
                    <input type="text" class="form-control border border-warning mb-3" id="ThemaInput" placeholder="Naam">
                    <label for="DescriptionArea">Beschrijving</label>
                    <textarea class="form-control border border-warning mb-3" id="DescriptionArea"rows="5"
                    placeholder="Beschrijving..."></textarea>

                </div>
            </div>
            <div class="container-fluid p-2">
                <div class="row align-content-center">
                    <div class="col d-flex justify-content-end">
                        <a onclick="history.back()" type="button" class="btn btn-warning">Annuleer</a>
                    </div>
                    <div class="col d-flex justify-content-start">
                        <a type="button" class="btn btn-warning" id="submitThema" asp-area="" asp-controller="Thema" asp-action="Index" >Maak thema</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
<script src="~/dist/thema.entry.js" defer></script>
}