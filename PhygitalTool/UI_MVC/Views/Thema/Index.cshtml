@if (User.IsInRole("SubAdmin"))
{
<table class="table text-center">
    <thead>
    <tr>
        <th>ID</th>
        <th>Thema</th>
        <th>Wijzig</th>
        <th>Verwijder</th>
    </tr>
    </thead>
    @{
    foreach (var thema in Model)
    {
    <tr>
        <td>@thema.Id</td>
        <td>@thema.Title</td>
        <td>
            <a asp-controller="Thema" asp-action="Edit" asp-route-id="@thema.Id" class="bi bi-pencil-square"></a>
        </td>
        <td>
            <i class="bi bi-trash deleteIcon" id="delete" data-id="${subThema.id}"></i>
        </td>
    </tr>
    }
    }
</table>
<div class="row align-content-center">
    <div class="col d-flex justify-content-end">
        <a type="button" class="btn btn-warning" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
    </div>
    <div class="col d-flex justify-content-start">
        <a type="button" class="btn btn-warning" asp-area="" asp-controller="Thema" asp-action="Add">Thema aanmaken</a>
    </div>
</div>
}


