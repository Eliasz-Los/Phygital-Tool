@using Phygital.Domain.Questionsprocess;
@model IEnumerable<Flow>

@{
    ViewBag.Title = "Phygital";
    Layout = "_Layout";
}

<!-- This page displays the flowtypes a user can choose from when starting the application -->
@if (User.IsInRole("Supervisor"))
{
    <div class="text-center">
        <h1 class="p-2">Flows</h1>
        <div class="row justify-content-center">
            @{
                foreach (var flow in Model)
                {
                    <div class="col-4 py-2">
                        <div class="card text-center">
                            <h5 class="card-header">@flow.Theme.Title</h5>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col text-start">
                                        <p>Flowtype</p>
                                        <p>Actief</p>
                                    </div>
                                    <div class="col text-start">
                                        <p>@flow.FlowType</p>
                                        <p>@flow.IsOpen</p>
                                    </div>
                                </div>

                            </div>
                            <a asp-controller="Flow" asp-action="Details" asp-route-id="@flow.Id" class="btn btn-warning">Er aan beginnen!</a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
}

@if (User.IsInRole("SubAdmin") || User.IsInRole("Admin"))
{
    <table class="table table-striped text-center">
        <thead>
        <tr>
            <th>id</th>
            <th>type</th>
            <th>Actief</th>
            <th>Thema</th>
            <th>Statistics</th>
            <th>Wijzig</th>
            <th>Verwijder</th>
        </tr>
        </thead>
        @{
            foreach (var flow in Model)
            {
                <tr>
                    <td id="flowId">@flow.Id</td>
                    <td>@flow.FlowType</td>
                    <td>@flow.IsOpen</td>
                    <td>@flow.Theme.Title</td>
                    <td>
                        <a class="btn btn-primary bi bi-file-earmark-spreadsheet" asp-controller="Statistic" asp-action="Index" asp-route-id="@flow.Id"></a>
                    </td>
                    <td>
                        <a class="btn btn-success bi bi-pencil-square" asp-controller="Flow" asp-action="Edit" asp-route-id="@flow.Id"></a>
                    </td>
                    <td>
                        <form asp-controller="Flow" asp-action="Delete" asp-route-id="@flow.Id" method="post">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                    </td>
                    <td>
                        <a asp-controller="Flow" asp-action="Details" asp-route-id="@flow.Id" class="btn btn-warning">Er aan beginnen!</a>
                    </td>
                </tr>
            }
        }
    </table>
    <div class="row align-content-center">
        <div class="col d-flex justify-content-end">
            <a type="button" class="w-25 btn btn-warning" asp-controller="Home" asp-action="Index">Home</a>
        </div>
        <div class="col d-flex justify-content-start">
            <a type="button" class="w-25 btn btn-warning" asp-controller="Flow" asp-action="FlowThemeAndType">Flow aanmaken</a>
        </div>
    </div>
}