@using Phygital.Domain.Questionsprocess;
@model Flow

@{
    ViewBag.Title = "Flow Process";
    Layout = "_Layout";
}

<!-- This page is what the user will see when they start the desired flow, it displays the flow elements -->

<h2 class="text-center">Please answer the following questions</h2>
<div id="flowId" class="white-text">@Model.Id</div>


<div id="carouselExampleControls" class="carousel slide spacing-top" data-bs-ride="carousel">

    <div class="carousel-inner">
        <div id="questions"></div>
    </div>
    <div class="progress">
        <div id="progressBar" class="progress-bar yellow-color" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
    </div>

    <div class="row">
        <div class="col text-start">
            <button id="prevBtn" class="btn btn-warning btn-flow-details spacing-top" data-bs-target="#carouselExampleControls" data-bs-slide="prev">Previous</button>
        </div>
        <div class="col text-end">
            <button id="nextBtn" class="btn btn-warning btn-flow-details spacing-top" data-bs-target="#carouselExampleControls" data-bs-slide="next">Next</button>
        </div>
    </div>
</div>
<div class="text-center">
        <a asp-controller="Endpage" asp-action="Index" class="btn btn-warning btn-flow-details spacing-top" id="answerFlow">Send in</a>
</div>

@section Scripts
{
    <script src="~/js/Flow/flow.js" defer></script>
}