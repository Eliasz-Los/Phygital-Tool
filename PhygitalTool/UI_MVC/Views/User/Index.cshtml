@model IEnumerable<Phygital.Domain.User.Account>

@{
    ViewBag.Title = "Werknemers overzicht";
    Layout = "_Layout";
}
<div>
    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Lastname</th>
            <th>Email</th>
            <th>Verwijder</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>
                    <form asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" method="post">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <div class="row align-content-center">
        <div class="col d-flex justify-content-end">
            <a type="button" class="btn btn-warning" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        </div>
        <div class="col d-flex justify-content-start">
            <a type="button" class="btn btn-warning" asp-area="Identity" asp-page="/Account/Register">Medewerker toevoegen</a>
        </div>
    </div>
</div>