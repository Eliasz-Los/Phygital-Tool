@model dynamic

@{
    ViewBag.Title = "Phygital";
    Layout = "_Layout";
}

<div class="position-fixed top-0 end-0 p-3" style="z-index: 11">
    <div id="liveToast" class="toast hide" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <strong class="me-auto">Notificatie</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body border-success">
            Antwoorden zijn succesvol opgeslagen!!!
        </div>
    </div>
</div>

<div class="text-center">
    <h2 class="align-content-center p-4">Bedankt voor het deelnemen aan de bevraging</h2>

    <div class="container-fluid p-2">
        <div class="row">
            <h4 class="align-content-center p-3">Wilt u uw contact gegevens delen?</h4>
        </div>
        <div class="row align-content-center">
            <div class="col p-2">
                <a type="button" class="btn btn-danger w-25" id="btnNo" asp-area="" asp-controller="Home" asp-action="Index">Nee</a>
            </div>
            <div class="col p-2">
                <a type="button" class="btn btn-success w-25" id="btnYes" asp-area="Identity" asp-page="/Account/Register">Ja</a>
            </div>
        </div>
    </div>

    <div align="center">
        <h4>Mede mogelijk gemaakt door</h4>
        <img src="images/vlaamseOverheidBanner.jpg" alt="vlaamseOverheidBanner" width="250">
        <img src="images/levuurBanner.jpg" alt="levuurBanner" width="250">
        <img src="images/TreeCompanyBanner.png" alt="treeCompanyBanner" width="250">
    </div>
</div>

@section Scripts
{
<script type="module" src="~/js/EndPage/endpage.js" ></script>
<script>
        window.onload = function() {
            var toastLiveExample = document.getElementById('liveToast')
            var toast = new bootstrap.Toast(toastLiveExample)
            toast.show()
        }
    </script>
}
